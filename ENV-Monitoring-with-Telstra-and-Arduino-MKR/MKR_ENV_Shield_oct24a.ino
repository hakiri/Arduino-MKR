  setDebugMessageLevel(2);
  ArduinoCloud.printDebugInfo();
  
  // Initialize ENV Shield
 ENV.begin();
}

void loop() {
  ArduinoCloud.update();
  
    temperature = ENV.readTemperature();
   humidity    = ENV.readHumidity();
   lux         = ENV.readIlluminance();
  
}








